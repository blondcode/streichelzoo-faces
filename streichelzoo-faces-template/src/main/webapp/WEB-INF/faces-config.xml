<?xml version='1.0' encoding='UTF-8'?>
<!-- this triggers the annotation scanner for @ManagedBean, @FacesValidator, @FacesConverter etc -->
<faces-config version="2.2"
			  xmlns="http://xmlns.jcp.org/xml/ns/javaee"
			  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
	<application>
		<locale-config>
			<default-locale>de</default-locale>
			<!-- messages.properties must be copied to messages_de.properties -->
			<supported-locale>en</supported-locale>
			<supported-locale>de</supported-locale>
		</locale-config>
	</application>

	<!-- don't need to declare <f:loadBundle> in every view -->
	<!--  f:loadBundle basename="messages" var="msgs" / -->
	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>

	<application>
		
	<!--
		<view-handler>de.katerkamp.I18nViewHandler</view-handler>  
	-->
	<!--
		<resource-handler>de.katerkamp.szoo.resourcehandler.FilesystemAdocResourceHandler</resource-handler>  
		-->
		<!--
		<resource-handler>de.katerkamp.streichelzoo.UnmappedResourceHandler</resource-handler>  
		-->
		<resource-handler>org.omnifaces.resourcehandler.UnmappedResourceHandler</resource-handler>  
	</application>

	
</faces-config>
